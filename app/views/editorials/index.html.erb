<p id="notice"><%= notice %></p>

<h1>Lista de Editoriales</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @editorials.each do |editorial| %>
      <tr>
        <td><%= editorial.name %></td>
        <td><%= link_to 'Mostrar', editorial %></td>
        <td><%= link_to 'Editar', edit_editorial_path(editorial) %></td>
        <td><%= link_to 'Eliminar', editorial, method: :delete, data: { confirm: 'Estas seguro de Borrar el Editorial?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Editorial', new_editorial_path %>
<%= link_to 'Regresar', '/menu/main/ %>
